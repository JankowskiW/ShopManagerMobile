<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false"
        android:state_pressed="false"
        android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="-90"
                android:startColor="@color/colorBtnBackground"
                android:endColor="@color/colorBtnBackground" />
            <corners android:radius = "2dip"/>
        </shape>
    </item>


    <item
        android:state_pressed="true"
        android:state_enabled="true"
        android:state_selected="false">
        <shape android:shape="rectangle">
            <gradient
                android:angle="-90"
                android:startColor="@color/colorBtnPressedBackground"
                android:endColor="@color/colorBtnPressedBackground" />
            <corners android:radius = "2dip"/>
        </shape>
    </item>


    <item
        android:state_enabled="false"
        android:state_selected="false">
        <shape android:shape="rectangle">
            <gradient
                android:angle="-90"
                android:startColor="@color/colorBtnDisabledBackground"
                android:endColor="@color/colorBtnDisabledBackground" />
            <corners android:radius = "2dip"/>
        </shape>
    </item>
</selector>